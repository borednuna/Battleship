<Page x:Class="Battleship.Views.RegisterView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Battleship.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterView">

    <StackPanel>
        <TextBlock Text="Welcome to Battleship!"
            FontSize="24"
            HorizontalAlignment="Center"
            Margin="10"/>
        <TextBlock Text="Register Players"
            FontSize="15"
            HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Player 1 Name:" Margin="10" VerticalAlignment="Center"/>
            <TextBox x:Name="Player1Textbox"
                Width="200"
                Height="30"
                Margin="20"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Player 2 Name:" Margin="10" VerticalAlignment="Center"/>
            <TextBox x:Name="Player2Textbox"
                Width="200"
                Height="30"
                Margin="20"/>
        </StackPanel>
        <Button Content="Start Game"
            Width="100"
            Height="30"
            Margin="20"
            HorizontalAlignment="Center"
            Click="RegisterPlayers_Click"/>
    </StackPanel>
</Page>
